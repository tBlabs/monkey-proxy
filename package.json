{
    "name": "node.ts-startup",
    "version": "1.0.0",
    "description": "node.ts boilerplate",
    "main": "./bin/startup.js",
    "author": "tB",
    "license": "beerware",
    "engines": {
        "node": "8.4.0",
        "npm": "5.3.0"
    },
    "nodemonConfig": {
        "ignore": [
            "./records"
        ]
    },
    "scripts": {
        "x_preinstall": "sudo npm i -g typescript jest tslint npm-run-all",
        "start": "node ./bin/startup.js",
        "run": "npm run clean && npm run build && clear && npm run start",
        "watch": "tsc --watch",
        "monitor": "nodemon ./bin/startup.js",
        "serve": "npm run clean && run-p watch monitor",
        "serve:win": "run-p watch monitor",
        "lint": "tslint -c tslint.json './src/**/*.{ts,tsx}' --format msbuild",
        "test": "jest --runInBand",
        "build": "tsc -p .",
        "clean": "rm ./bin -rf",
        "autofix": "tslint --fix --project .",
        "publish": "git push origin master"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.6",
        "@types/jasmine": "^3.5.10",
        "@types/jest": "^25.2.1",
        "@types/lodash": "^4.14.150",
        "@types/node": "^13.13.4",
        "@types/uuid": "^7.0.3",
        "jest": "^25.5.4",
        "nodemon": "^2.0.3",
        "npm-check-updates": "^4.1.2",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^25.4.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "async-delay": "^1.0.3",
        "asyncawait": "^3.0.0",
        "axios": "^0.19.2",
        "bluepill-client-library": "^1.1.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "git-rev": "^0.2.1",
        "inversify": "^5.0.1",
        "jasmine-core": "^3.5.0",
        "minimist": "^1.2.5",
        "moq.ts": "^6.3.3",
        "onoff": "^6.0.0",
        "os": "^0.1.1",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^2.4.0",
        "socket.io-client": "^2.3.0",
        "uuid": "^8.0.0"
    }
}
